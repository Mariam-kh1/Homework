#include <iostream>
void inputNums(int nums[], int size);
int secondLowestNum(int nums[], int size);
int main()
{
    const int size = 5;
    int nums[size];
    std::cout<<"Enter the numbers: ";
    inputNums(nums, size);
    std::cout<<"\nThe second lowest number is: ";
    std::cout << secondLowestNum(nums, size);
    return 0;
}
void inputNums(int nums[], int size){
    for (int i = 0; i < size; i++) {
        std::cin>>nums[i];
    }
}
int secondLowestNum(int nums[], int size) {
    int num1 = nums[0];
    int num2 = 0;
    if (num1 > nums[1]) {
        num1 = nums[1];
        num2 = nums[0];
    }
    else {
        num2 = nums[1];
    }
    for (int i = 2; i < size; i++) {
        if (nums[i] < num1) {
            num2 = num1;
            num1 = nums[i];
        } else if (nums[i] < num2) {
            num2 = nums[i];
        }
    }
    return num2;
}

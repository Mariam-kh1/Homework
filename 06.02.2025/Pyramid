#include <iostream>
int main () {
    int num = 0;
    std :: cout << "Enter the number: ";
    std :: cin >> num;
    std :: cout << "The pyramid of your number will be like this: \n";
    for (int a = 1; a <= num; a++) {
        std :: cout << std :: string(num - a, ' ');
        std :: cout << std :: string(2 * a - 1, '*') << std :: endl;
    }
    return 0;
}

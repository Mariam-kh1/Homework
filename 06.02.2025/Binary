#include <iostream>
int main() {
    int decimal = 0;
    std :: cin >> decimal; 
    int wrongBinary = 0; 
    int count = 0; 
    if (0 == decimal) {
        std :: cout << "0" << endl;
        return 0;
    }
    while (0 < decimal) {
        wrongBinary = wrongBinary * 10 + (decimal % 2);
        decimal /= 2;
        count++; 
    }
    int rightBinary = 0;
    while (0 < count) {
        rightBinary = rightBinary * 10 + (wrongBinary % 10);
        wrongBinary /= 10;
        count--;
    }
    std :: cout << rightBinary << endl; 
    return 0;
}
